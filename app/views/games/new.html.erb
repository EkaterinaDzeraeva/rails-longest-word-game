<div class="container">
  <h1>New Game</h1>
  <div class="letters">
      <%@letters.each do |letter| %>
        <div> <%= letter.capitalize %> </div>
        <% end %>
    </div>
    <div class="input">
      <form action="/score" class="form-inline" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'grid', @letters  %>
          <input type="text" name="word" placeholder="What is word?">
            <%# <input type="submit" value="Ask!" class="ask-button"> %>
          <button type="submit"> Submit</button>
        </form>
  </div>
</div>
